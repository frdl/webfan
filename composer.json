{
    "name": "frdl/webfan",
    "type": "project",
    "description": "create websites, developing projects, compose applications",
    "keywords": ["php", "packages", "pluginsystem", "development", "websites", "webfan", "frdl", "api", "pragmamx", "library", "framework"],
    "homepage": "http:\/\/frdl.github.io\/webfan\/",
    "license":  [ "BSD-4-Clause", "BSD-3-Clause"],
    "support": {
        "email": "support@webfan.de",
        "issues": "https:\/\/github.com\/frdl\/webfan\/issues",
        "forum": "http:\/\/tillwehowski.webfan.de\/forum\/",
        "wiki": "https:\/\/github.com\/frdl\/webfan\/wiki",
        "source": "https:\/\/github.com\/frdl\/webfan\/tree\/master"
    },
    "authors": [
        {
            "name": "Till Wehowski",
            "email": "software@frdl.de",
            "homepage": "http:\/\/www.webfan.de",
            "role": "Developer"
        },
        {
            "name": "Mahel Plasson",
            "email": "contact@tradezone.fr",
            "homepage": "http:\/\/tradezone.fr",
            "role": "Translator"
        }
    ],

  "repositories":
  [
 
    {
      "packagist": true
    },
    
    {
       "type": "composer",
       "url": "http:\/\/www.phpclasses.org\/"
     },

    { 
       "type": "composer",
       "url": "http:\/\/www.jsclasses.org\/"
    },

    
        {
            "type": "package",
            "package": {
                "name": "TerraProject/pragmamx",
                "version": "2.2.2",
                "source": {
                    "url": "http:\/\/download.pragmamx.org\/pmx\/pragmaMx_2.2.4_2015-08-25--20-17_full.zip",
                    "type": "zip"
                }
            }
        },
        
        {
            "type": "package",
            "package": {
                "name": "composer/composer",
                "version": "1.0.0-alpha10",
                "source": {
                    "url": "https:\/\/github.com\/composer\/composer\/archive\/1.0.0-alpha10.zip",
                    "type": "zip"
                }
            }
        }


 ],

    "require": {
        "php": ">=5.3.3"
    },

    "require-dev": {
    	"phine/phar" : "*",
        "crodas/php-git":"*",
        "phpseclib/phpseclib": ">=0.3.10",
        "jquery/jquery-ui":"*",
        "pachanka/ptty":">=0.0.3",
        "nathansmith/jQuery-Desktop":"*",
        "crada/php-apidoc": "*"
    },


    "suggest": {

        "phpclasses/httpclient": "Original source of a fork",
        "phpclasses/oauth-api" : "Oauth Client SDK",
 
        "phpclasses/text-diff-rollback": "optimized diff patching",
        "phpclasses/bserialization":"Original source of a fork",       
        
        "gettext/languages": "dev-master",
        "gettext/gettext": "dev-master",
       
        "composer/composer": "Composer functionallities",
        "ext-zip" : "ZipArchive",
        "phine/phar" : "Using Phar without the extension installed",
        "crodas/php-git":"Acces git repositories and files",
        "phpseclib/phpseclib": "RSA, X.509, SSL without OpenSSL installed or better",
        "jquery/jquery-ui":"jQuery UI Widgets",
        "pachanka/ptty":"jQuery Terminal emulator",
        "nathansmith/jQuery-Desktop":"jQuery Desktop look and feel"
    },

    "conflict": {
        "microsoft/frontpage" : "*"
    },    
    
    "provide" : {
    	"frdl/package-fetcher" : "dev-master", 
        "phpclasses/source-loader": "0.9.17",
        "phpclasses/validate-formats": "5.0.4",
        "phpclasses/asql-cli": "1.0.0",
        "phpclasses/frdl-app": "1.0.0",
        "frdl/mini-orm" : "dev-master",
        "phpclasses/text-diff-rollback" : "4.0.1"
    },

    "autoload": {
    	"files": [
    	          ".ApplicationComposer/lib/frdl/webfan/Autoloading/SourceLoader.php",
    	          ".ApplicationComposer/lib/frdl/webfan/App.php"
    	         ],
        "psr-4": {
            "frdl\\": ".ApplicationComposer/lib/frdl/",
            "webfan\\": ".ApplicationComposer/lib/webfan/",
            "webdof\\": ".ApplicationComposer/lib/webdof/",
            "": ".ApplicationComposer/lib/"
        }
    },

    "autoload-dev": {
        "psr-4": { "": ".ApplicationComposer/lib/Tests" }
    },

    "prefer-stable": false,

    "config": {
        "bin-dir": "packages/bin",
        "preferred-install": "auto",
        "store-auths": "prompt",
        "github-protocols" : [ "git", "https","ssh"],
        "github-oauth": {"github.com": "oauthtoken"},
        "github-domains": ["github.com"],
        "vendor-dir" : ".ApplicationComposer/vendor",
        "cache-dir" : ".ApplicationComposer/cache",
        "cache-files-dir":".ApplicationComposer/packages",
        "cache-files-ttl": 15552000,
        "prepend-autoloader": false,
        "classmap-authoritative": true,
        "notify-on-install": true
    },

   
  "scripts": {
        "command": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ],
        "pre-install-cmd": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ],
       "pre-package-install": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ],
        "post-create-project-cmd": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ],
        "post-root-package-install": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ],
        "pre-file-download": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ],
        "pre-package-uninstall": [
            "webfan\\InstallShield\\bridge\\ComposerBridge::dispatch"
        ]
    },
    
    
    "extra": { 
        "frdl" : true,
        "frdl-apc-type" : "core", 
        "fexe": {
	               "PACKAGE" : "{___$PACKAGE___}",
	               "VERSION" : "{___$VERSION___}",
	               "OID" : "{___$OID___}",
	               "HOST" : "{___$HOST___}",
	               "HOST_HASH" : "{___$HOST_HASH___}",
	               "URL" : "{$__LOCATION___}",
	               "DOWNLOADTIME" : "{___$DOWNLOADTIME___}",
	               "INSTALLTIME" : "{___$INSTALLTIME___}" 
	              
         },
         
         "frdl-addons-suggested" : [
            {
             "title" : 	"Composer Source",
             "description" : "The Source of the php Composer as helper library",
             "skip-required" : true,
             "packages" : [
                    {"composer/composer": "Composer Source Code"}
             	]
             },
             
            {
             "title" : 	"gettext",
             "description" : "Localization",
             "packages" : [
                    {"gettext/languages": "gettext/gettext requirement"},
                    {"gettext/gettext": "_(); - function of gettext compliant"}
             	]
             },
             	
         	
            {
             "title" : 	"OAuth Client",
             "description" : "Enables OAuth 3.rd party logins and API SDKs",
             "packages" : [
                   {"phpclasses/httpclient": "Http Client Class"},
                   {"phpclasses/oauth-api" : "Oauth Client SDK"}           	
             	]
             },
             	
         	
            {
             "title" : 	"jsv4",
             "description" : "A (coercive) JSON Schema v4 Validator for PHP",
             "packages" : [
                   {"geraintluff/jsv4": "Http Client Class"}        	
             	]
             },
             
             {
             "title" : 	"PragmaMx",
             "description" : "Just another CMS",
             "packages" : [
                  {"TerraProject/pragmamx" : "CMS"}
               	
             	]
             },          
             
              
             {
             "title" : 	"SVN/history-rollback",
             "description" : "Advanced source code manager requirements",
             "packages" : [
                      {"phpclasses/text-diff-rollback": "optimized string diff patching"},
                      {"phpclasses/bserialization":"Binary serialization"}
             	]
             }     
             
 
                     	
         ]
    }
}    
